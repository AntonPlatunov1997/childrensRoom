<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- add servlet -->
    <servlet>
        <servlet-name>CreatingRoom</servlet-name>
        <servlet-class>com.servlets.CreatingRoomServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CreatingRoom</servlet-name>
        <url-pattern>/fill</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SortByPriceServlet</servlet-name>
        <servlet-class>com.servlets.SortByPriceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SortByPriceServlet</servlet-name>
        <url-pattern>/sortingByCost</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>SortBySizeServlet</servlet-name>
        <servlet-class>com.servlets.SortBySizeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SortBySizeServlet</servlet-name>
        <url-pattern>/sortingBySize</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SortByRangeServlet</servlet-name>
        <servlet-class>com.servlets.SortByRangeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SortByRangeServlet</servlet-name>
        <url-pattern>/sortingByRange</url-pattern>
    </servlet-mapping>





</web-app>

